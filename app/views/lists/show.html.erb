<h1> Here is your selected list! </h1>

<hr>

<div class="card-product">
  <img src="https://raw.githubusercontent.com/lewagon/fullstack-images/master/uikit/skateboard.jpg" />
  <div class="card-product-infos">
    <h2><strong> Your list with the name: <%= @list.name %> </strong></h2>
    <p> <strong> Your list has the following bookmarks: </strong> </p>
    <p><% @list.bookmarks.each do |bookmark| %></p>
      <li><%= bookmark.comment%></li>
    <%end%>
    <ul>
      <% @list.bookmarks.each do |bookmark| %>
        <li>
          <%= bookmark.comment %>
          <%= link_to "Delete", bookmark_path(bookmark),
            data: {turbo_method: :delete, turbo_confirm: "Are you sure?"}
          %>
        </li>
      <% end %>
    </ul>
  </div>
</div>




